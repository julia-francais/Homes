<%- include('./partials/header')%>

<div class="container">
    <h1 style="text-align: center">Sign up</h1>
    <div class="row">

    <div style="width: 30%; margin:50px auto;">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="Your username">
              </div>

              
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" placeholder="Your password">
                <small id="passwordHelp" class="form-text text-muted">Try to choose a strong password !</small>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-outline-success" type="submit">Submit</button>
        </form>
        <a class="back mt-3" href="/campgrounds">Go back to Homes list</a>
    </div>
    </div>


</div>

<%- include('./partials/footer')%>